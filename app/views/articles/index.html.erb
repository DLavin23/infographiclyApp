<h1>Reading List</h1>
<br>
<h2>Welcome, <%= @user.user_name %></h2>
<br>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title: </th>
      <th>URL: </th>
      <th>Status: </th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td>
        <%= article.title %>
      </td>
      <td>
        <%= link_to article.shortlink, article.url, :target => '_blank' %>
      </td>
      <td>
        <%= status(article.state) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
