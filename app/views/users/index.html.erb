<h1>User Listing</h1>

<h4 style="color:blue;"><%= notice %></h4>

<table border="1">
  <tr>
    <th>User name</th>
    <th>Password</th>
    <th>Email</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.user_name %></td>
    <td><%= user.password %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
<%= link_to 'Log out', "/logout" %>

